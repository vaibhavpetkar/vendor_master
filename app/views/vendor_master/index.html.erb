<h1>Vendor Master List</h1>

<%= link_to 'New Vendor', new_vendor_master_path, class: 'btn btn-success' %>

<table class="table table-striped table-bordered mt-4">
  <thead class="thead-dark">
    <tr>
      <th>Sr</th>
      <th>Vendor/Client Code</th>
      <th>Name of Company</th>
      <th>Vendor/Ledger Name</th>
      <th>Group Name</th>
      <th>TAN No</th>
      <th>Location</th>
      <th>PAN No</th>
      <th>Name As Per PAN Card</th>
      <th>Vendor Bank Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendor_masters.each_with_index do |vendor, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= vendor.vendor_code %></td>
        <td><%= vendor.company_name %></td>
        <td><%= vendor.vendor_name %></td>
        <td><%= vendor.account_details %></td>
        <td><%= vendor.tan_no %></td>
        <td><%= vendor.location %></td>
        <td><%= vendor.pincode %></td>
        <td><%= vendor.company_name %></td> <!-- Adjust as needed -->
        <td><%= vendor.vendor_bank_name %></td> <!-- Add this field to the migration and model if needed -->
        <td><%= vendor.status %></td>
        <td><%= link_to 'Show', vendor, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_vendor_master_path(vendor), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
