<%= form_for @vendor_master, html: { class: 'form-horizontal' } do |f| %>
  <% if @vendor_master.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(@vendor_master.errors.count, "error") %> prohibited this vendor from being saved:</h4>
      <ul>
        <% @vendor_master.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :company_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :company_name, class: 'form-control' %>
    </div>
  </div>

  <!-- Add other fields similarly -->

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
